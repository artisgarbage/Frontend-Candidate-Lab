body
  background url('../../images/bg-wood.jpg') no-repeat center center fixed
  -webkit-background-size cover
  -moz-background-size cover
  -o-background-size cover
  background-size cover
  min-width 600px
  overflow hidden
  

.polaroid
    position absolute
    -webkit-transition all 0.4s
    -moz-transition all 0.4s
    -o-transition all 0.4s
    transition all 0.4s
    transition-timing-function: 0.4s
        
    &#celebration
        background url('../../images/polaroid-celebration.png')
        width 276px
        height 308px
        top 15%
        left 5%
        z-index 3
    &#signing
        background url('../../images/polaroid-signing.png')
        width 270px
        height 296px
        top 18%
        left 30%
        z-index 1
        p
            color #fff
            margin 0 30px
            font-size 11px
            position absolute
            bottom 75px
    &#date
        background url('../../images/polaroid-date.png')
        width 284px
        height 310px
        top 8%
        left 55%
        z-index 2
    
    &#shoe
        background url('../../images/polaroid-shoe.png')
        width 285px
        height 200px
        bottom 0
        right 15%
    
    &#rando
        background url('../../images/polaroid-rando.png')
        width 356px
        height 366px
        top 40%
        right -10%
  
.callout
    background url('../../images/bg-callout.png') no-repeat top right 
    
    -webkit-background-size cover
    -moz-background-size cover
    -o-background-size cover
    background-size cover

    position absolute
    bottom 0
    left 0
    width 66%
    min-width 410px
    height 269px
    margin 0
    overflow auto
    
    &__txt
        position relative
        top 5%
        left 5%
        width 90%
        
        p
            margin-bottom 1em
        
    button
        color #fff
        text-transform uppercase
        border-radius 2px
        border none
        padding 1em
        
        &.accept
            background-color #faa862
            background-image linear-gradient(#f7943b, #f68533)
            &:hover
                background-image none
        &.decline
            background-color #676767
            background-image linear-gradient(#3b3b3b, #313131)
            &:hover
                background-image none
            
